<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:weightSum="1">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tableLayout11"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <!-- 2 columns -->
                <TableRow
                    android:id="@+id/tableRowContacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="112dp"
                        android:layout_height="52dp"
                        android:layout_weight="0.03"
                        app:srcCompat="@drawable/clientes2" />

                    <LinearLayout android:orientation="vertical">
                        <TextView
                            android:id="@+id/nombreClienteIngGestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nombre_cliente"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="21sp" />

                        <TextView
                            android:id="@+id/direccionClienteIngGestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Direccion cliente" />
                    </LinearLayout>
                </TableRow>
                <!-- edittext span 2 column -->
                <TableRow
                    android:id="@+id/tableRowTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <LinearLayout android:orientation="vertical">

                        <TextView
                            android:id="@+id/nombreGestionIngGestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre Gestion" />

                        <TextView
                            android:id="@+id/tituloIngGestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingresar Gestion"
                            android:textSize="21sp" />

                    </LinearLayout>
                </TableRow>
                <!-- edittext span 2 column -->

                <!-- 2 columns -->
                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <Button
                        android:id="@+id/selecContactoGestionBoton"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar Contacto"
                        android:layout_marginBottom="5dp"/>

                </TableRow>

                <!-- edittext span 2 column -->
                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/contactoSeleccionado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contacto Seleccionado"
                        android:textSize="21sp" />
                </TableRow>

                <!-- 2 columns -->
                <TableRow
                    android:id="@+id/tableRow12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <Button
                        android:id="@+id/selecResultadoGestionBoton"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar Resultado"
                        android:layout_marginBottom="5dp"/>

                </TableRow>

                <!-- edittext span 2 column -->
                <TableRow
                    android:id="@+id/tableRow22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/resultadoSeleccionado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contacto Seleccionado"
                        android:textSize="21sp" />
                </TableRow>

                <!-- 2 columns -->
                <TableRow
                    android:id="@+id/tableRow13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <Button
                        android:id="@+id/tomarFotoGestionBoton"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Tomar Foto"
                        android:layout_marginBottom="5dp"/>

                </TableRow>

                <!-- edittext span 2 column -->
                <TableRow
                    android:id="@+id/tableRow23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/fotoCargada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resultado Foto"
                        android:textSize="21sp" />
                </TableRow>

                <!-- 2 columns -->
                <TableRow
                    android:id="@+id/tableRow14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <Button
                        android:id="@+id/ingComentarioGestionBoton"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Ingresar Comentario"
                        android:layout_marginBottom="5dp"/>

                </TableRow>

                <!-- edittext span 2 column -->
                <TableRow
                    android:id="@+id/tableRow24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/comentarioGestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comentario Ingresado"
                        android:textSize="21sp" />
                </TableRow>

            </TableLayout>


            <Button
                android:id="@+id/confirmarIngGestionBoton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="Confirmar" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>