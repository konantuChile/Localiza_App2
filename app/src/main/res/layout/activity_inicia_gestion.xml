<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        app:srcCompat="@drawable/clientes2"
        android:layout_height="60dp"
        />

    <TextView
        android:id="@+id/nombreClienteIniGestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_cliente"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1833ff"
        android:textSize="21sp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/home_xs"
        android:layout_width="20dp"
        app:srcCompat="@drawable/home_xs"
        android:layout_height="20dp"
        android:layout_below="@+id/nombreClienteIniGestion"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/direccionClienteIniGestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direccion cliente"
        android:layout_alignBottom="@+id/home_xs"
        android:layout_toEndOf="@+id/home_xs" />

    <TextView
        android:id="@+id/nombreGestionIniGestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Gestion"
        android:layout_below="@+id/home_xs"
        android:layout_marginTop="17dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nombreGestionIniGestionDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda que Decir"
        android:layout_alignTop="@+id/imgQueDecir"
        android:layout_alignEnd="@+id/nombreClienteIniGestion"
        android:layout_marginTop="13dp" />

    <ImageButton
        android:id="@+id/imgQueDecir"
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/script"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/nombreGestionIniGestion"
        android:layout_alignParentStart="true" />

    <TableRow
        android:id="@+id/tableRow_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgQueDecir"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        android:baselineAligned="false">

        <ImageButton
            android:id="@+id/histGestionesImageBoton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/direccionClienteIniGestion"
            android:layout_below="@+id/imgQueDecir"
            android:elevation="0dp"
            android:text="Buenas Tardes , mi nombre es Cobrador"
            app:srcCompat="@drawable/historial" />


        <ImageButton
            android:id="@+id/sigGestionesImageBoton"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:layout_alignTop="@+id/histGestionesImageBoton"
            android:layout_toEndOf="@+id/nombreGestionIniGestionDesc"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/inicia" />

    </TableRow>

</RelativeLayout>